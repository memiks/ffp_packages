#!/ffp/bin/sh -xe

PN=zlib
PV=1.2.6
PR=1

. ./config.ffp

X=$(pwd)
W=$(mktemp -t -d $PN.XXXXXX)
D=$W/pkg

cd $W
cat $X/SRC_URI | xargs wget 
tar xf $PN-$PV.tar*
cd $PN-$PV

CFLAGS="$FFP_CFLAGS" LDFLAGS="$FFP_LDFLAGS" \
./configure \
	--prefix=/ffp \
	--shared
make
make prefix=$D/ffp install

rm -rf $D$mandir/man3

mkdir -p $D/install
cp $X/{DESCR,HOMEPAGE} $D/install/

cd $D
makepkg $PN $PV $PR

